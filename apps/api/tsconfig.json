{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@repo/server": ["../../packages/server"],
      "@repo/server/*": ["../../packages/server/*"],
      "@repo/types": ["../../packages/types"],
      "@repo/adapter-spotify": ["../../packages/adapter-spotify"],
      "@repo/media-source-shoutcast": ["../../packages/adapter-shoutcast"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

